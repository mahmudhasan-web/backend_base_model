generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  name     String?
  password String
  orderProducts OrderProduct[]
}

model Product {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  productName          String
  price         Float
  description   String
  image         Json
  ratting       Float?
  brand         String
  category      String
  orderProducts OrderProduct[]
}

model OrderProduct {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  productId Product @relation(fields: [id], references: [id])
  userName  User @relation(fields: [id], references: [id])
  userAddress String
  quantity  Int
  price     Float
}
